{
  "name": "dexit/apprenticeship-connect",
  "description": "WordPress plugin for importing and managing apprenticeship opportunities from various government APIs",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "wordpress",
    "plugin",
    "apprenticeships",
    "jobs",
    "api"
  ],
  "homepage": "https://github.com/dexit/apprenticeship-connect",
  "authors": [
    {
      "name": "Your Name",
      "email": "your-email@example.com"
    }
  ],
  "support": {
    "issues": "https://github.com/dexit/apprenticeship-connect/issues",
    "source": "https://github.com/dexit/apprenticeship-connect"
  },
  "require": {
    "php": ">=7.4",
    "composer/installers": "^2.0",
    "woocommerce/action-scheduler": "^3.9"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "wp-coding-standards/wpcs": "^3.0",
    "phpunit/phpunit": "^9.6",
    "mockery/mockery": "^1.6",
    "brain/monkey": "^2.6",
    "squizlabs/php_codesniffer": "^3.8"
  },
  "autoload": {
    "classmap": [
      "includes/"
    ],
    "files": [
      "apprenticeship-connect.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "ApprCo\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "lint": [
      "phpcs --standard=phpcs.xml"
    ],
    "lint:fix": [
      "phpcbf --standard=phpcs.xml"
    ],
    "test": [
      "phpunit"
    ],
    "test:coverage": [
      "phpunit --coverage-html coverage"
    ]
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "7.4"
    }
  }
}
