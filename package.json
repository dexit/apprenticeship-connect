{
  "name": "apprenticeship-connect",
  "version": "2.0.0",
  "description": "WordPress plugin for importing and managing apprenticeship opportunities from various government APIs",
  "author": "Your Name",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "wordpress",
    "plugin",
    "apprenticeships",
    "jobs"
  ],
  "homepage": "https://github.com/dexit/apprenticeship-connect",
  "repository": {
    "type": "git",
    "url": "https://github.com/dexit/apprenticeship-connect.git"
  },
  "bugs": {
    "url": "https://github.com/dexit/apprenticeship-connect/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "wp-scripts build",
    "build:plugin": "bash build-plugin.sh",
    "build:production": "npm run build && bash build-plugin.sh",
    "start": "wp-scripts start",
    "dev": "wp-scripts start",
    "check-engines": "wp-scripts check-engines",
    "check-licenses": "wp-scripts check-licenses",
    "format": "wp-scripts format",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "wp-scripts lint-js",
    "lint:md:docs": "wp-scripts lint-md-docs",
    "lint:pkg-json": "wp-scripts lint-pkg-json",
    "packages-update": "wp-scripts packages-update",
    "plugin-zip": "wp-scripts plugin-zip",
    "test:e2e": "wp-scripts test-e2e",
    "test:unit": "wp-scripts test-unit-js",
    "clean": "rm -rf assets/build && rm -rf node_modules && rm -rf build && rm -rf dist"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@wordpress/env": "^10.0.0",
    "@wordpress/eslint-plugin": "^21.0.0",
    "@wordpress/prettier-config": "^4.0.0",
    "@wordpress/scripts": "^31.0.0",
    "@wordpress/stylelint-config": "^23.0.0",
    "eslint": "^8.57.0",
    "prettier": "npm:wp-prettier@3.0.3",
    "stylelint": "^16.10.0"
  },
  "prettier": "@wordpress/prettier-config",
  "eslintConfig": {
    "extends": [
      "plugin:@wordpress/eslint-plugin/recommended"
    ],
    "rules": {
      "@wordpress/no-unsafe-wp-apis": "warn",
      "jsdoc/require-param": "off",
      "jsdoc/check-param-names": "off"
    }
  },
  "stylelint": {
    "extends": "@wordpress/stylelint-config"
  }
}
